<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bxmy.shiftclock"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:debuggable="true"
        android:description="@string/app_description"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".ShiftClockActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="ShiftClockActivity$AlarmReceiver" >
            <receiver android:name="ShiftClockActivity$AlarmReceiver" >
                <intent-filter>
                    <action android:name="org.bxmy.shiftclock.action.alarm" />
                </intent-filter>
            </receiver>

            <intent-filter>
                <action android:name="org.bxmy.shiftclock.action.alarm" />
            </intent-filter>
        </receiver>
        <receiver android:name="ShiftClockActivity$BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>
    </application>

</manifest>